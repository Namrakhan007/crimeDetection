   }
}
.wrapper .form-box{
  width: 100%;
  padding: 40px;
}
.wrapper .form-box h2{
  font-size: 2em;
  color: rgb(41, 40, 40);
  text-align: center;

}
.wrapper .form-box.login{
  transition: transform .18s ease;
  transform: translateX(0);
}
.wrapper.active .form-box.login{
  transition: none;
  transform: translateX(-400px);
}
.wrapper .form-box.register{
  position: absolute;
  transition: none;
  transform: translateX(400px);
}
.wrapper.active .form-box.register{
  transition: transform .18s ease;
  transform: translateX(0);
}

.wrapper.active{
    height: 600px;
}
.input-box{
  position: relative;
  width: 100%;
  height: 50px;
  border-bottom: 2px solid rgb(41, 40, 40);
  margin: 30px 0;
}
.input-box label{
  position: absolute;
  top: 50%;
  left :5px;
  transform: translateY(-50%);
  font-size: 1rem;
  color: rgba(43, 42, 42, 0.834);
  font-weight: 500;
  pointer-events: none;
  transition: .5s;
}

.input-box input:focus~label,
.input-box input:valid~label {
  top: -5px;
}

.input-box input{
  width: 100%;
  height: 100%;
  background: transparent;
  border: none;
  outline: none;
  font-size: 1rem;
  color: rgba(58, 57, 57, 0.834);
  font-weight: 600;
  padding: 0 35px 0 5px;
}
.input-box .icon{
  position: absolute;
  right: 8px;
  color: rgba(8, 7, 7, 0.834);
}
.remember-forget{
  font-size: .9em;
  color:rgba(47, 46, 46, 0.834) ;
  font-weight: 500;
  margin: -15px 0 15px;
  display: flex;
  justify-content: space-between;
}
.remember-forget label input{
  accent-color:rgba(27, 26, 26, 0.834) ;
  margin-right: 3px;
}
.remember-forget  a{
  color:rgba(28, 27, 27, 0.834) ;
  text-decoration: none;
}
.remember-forget a:hover{
  text-decoration: underline;
}
.btn{
  width: 100%;
  height: 45px;
  background-color: rgb(103, 176, 245);
  border: none;
  outline: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 1rem;
  color: #ffff;
  font-weight: 500;
}
.login-register{
  font-size: .9em;
  color:rgb(103, 176, 245) ;
  text-align: center;
  font-weight: 500;
  margin: 25px 0 10px;
  justify-content: space-between;
}
.login-register p a{
  color:rgb(49, 96, 139) ;
  text-decoration: none;
font-weight: 600;
}
.login-register a:hover{
  text-decoration: underline;
}
