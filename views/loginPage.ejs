  /* Center vertically and horizontally */
  position: relative;
  width: 400px;
  height: 570px;
  background: transparent;
  border: 2px solid rgba(255,255,255,.5);
   top: 5%;
  left: 33%;
  border-radius: 20px;
  /* transform: translate(-50%, -50%); */
  backdrop-filter: blur(20px);
